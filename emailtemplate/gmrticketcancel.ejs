    <!-- Email wrapper -->
    <table role="presentation" class="email-wrapper" cellspacing="0" cellpadding="0" border="0" align="center" width="100%">
        <tr>
            <td style="padding: 20px 0;">
                <!--[if mso]>
                <table role="presentation" align="center" border="0" cellspacing="0" cellpadding="0" width="600">
                <tr>
                <td>
                <![endif]-->
                
                <div class="email-container" style="width: 100%; max-width: 600px; margin: 0 auto; background-color: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                    <h2 style="color: #2a9d8f; margin-top: 0; text-align: center; font-size: 24px;">Ticket Cancellation Confirmation</h2>
                    <p style="font-size: 16px; margin-bottom: 16px; text-align: center;">Dear <strong><%= user.name %></strong>,</p>
                    
                    <div class="highlight-box" style="background-color: #fff9f9; border-left: 4px solid #ffcccc; padding: 15px; margin: 20px 0; text-align: center;">
                        <p style="font-size: 16px; margin-bottom: 16px; text-align: center;">We are writing to confirm that your cancellation request for the following ticket has been successfully processed.</p>
                    </div>

                    <h3 style="color: #2a9d8f; margin-top: 20px; margin-bottom: 10px; text-align: center; font-size: 18px;">Trip Details:</h3>
                    <table class="details-table" style="width: 100%; border-collapse: collapse; margin: 20px 0; font-size: 14px; table-layout: fixed;">
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">From</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= trip.from %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">To</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= trip.to %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Journey Start Date</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= trip.journeystartdate %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Journey End Date</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= trip.journeyenddate %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Journey Start Time</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= trip.starttime %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Journey End Time</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= trip.endtime %></td>
                        </tr>
                    </table>

                    <h3 style="color: #2a9d8f; margin-top: 20px; margin-bottom: 10px; text-align: center; font-size: 18px;">Ticket Information:</h3>
                    <table class="details-table" style="width: 100%; border-collapse: collapse; margin: 20px 0; font-size: 14px; table-layout: fixed;">
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">PNR Number</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><strong><%= pnr %></strong></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Total Amount</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= ticketcost %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Refund Amount</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%= refundamount %></td>
                        </tr>

                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Refund Status</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;">Processing (if applicable)</td>
                        </tr>
                    </table>

                    <h3 style="color: #2a9d8f; margin-top: 20px; margin-bottom: 10px; text-align: center; font-size: 18px;">Passenger Details:</h3>
                    <% seat.forEach(function(seat) { %>
                    <table class="details-table" style="width: 100%; border-collapse: collapse; margin: 20px 0; font-size: 14px; table-layout: fixed;">
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">First Name</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%=seat.Fname %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Last Name</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%=seat.Lname %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Age</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%=seat.Age %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Gender</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%=seat.Gender %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Seat No</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%=seat.SeatNo %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Email</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%=seat.Email %></td>
                        </tr>
                        <tr>
                            <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd; background-color: #f0f0f0; color: #333; width: 30%;">Country</th>
                            <td style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;"><%=seat.Country %></td>
                        </tr>
                    </table>
                    <% }); %>

                    <p style="font-size: 16px; margin-bottom: 16px; text-align: center;">If you need any further assistance regarding your cancellation, please feel free to contact us at <a href="mailto:info@airpax.co" style="color: #2a9d8f; text-decoration: none;">info@airpax.co</a> or call us at <a href="tel:+919990301111" style="color: #2a9d8f; text-decoration: none;">+919990301111</a>.</p>

                    <p style="font-size: 16px; margin-bottom: 16px; text-align: center;">We hope to serve you again in the future!</p>

                    <p style="font-size: 16px; margin-bottom: 16px; text-align: center;">Best regards,</p>
                    <p style="font-size: 16px; margin-bottom: 16px; text-align: center; font-weight: bold;">Airpax Customer Support</p>

                    <div class="footer" style="text-align: center; font-size: 12px; color: #666; margin-top: 30px; padding-top: 20px; border-top: 1px solid #eee;">
                        <p style="margin: 5px 0; font-size: 12px;"><strong>RIGI TRANS TECH PVT LTD</strong></p>
                        <p style="margin: 5px 0; font-size: 12px;">PERNAM INN 837/1, MANDI ESTATE</p>
                        <p style="margin: 5px 0; font-size: 12px;">NEW DELHI 110047</p>
                        <p style="margin: 5px 0; font-size: 12px;">Email: <a href="mailto:info@airpax.co" style="color: #2a9d8f; text-decoration: none;">info@airpax.co</a> | Phone: <a href="tel:+919990301111" style="color: #2a9d8f; text-decoration: none;">+919990301111</a></p>
                        <p style="margin: 5px 0; font-size: 12px;">
                            <span class="logo-container" style="display: inline-block; vertical-align: middle;">
                                <a href="https://airpax.co/" style="color: #2a9d8f; text-decoration: none;">
                                    <img src="https://www.airpax.co/assets/logo3.png" alt="Airpax Logo" style="height: 20px; width: auto; vertical-align: middle; margin-right: 5px; border: 0; outline: none; text-decoration: none; display: inline-block;">
                                </a>
                            </span>
                        </p>
                    </div>
                </div>
                
                <!--[if mso]>
                </td>
                </tr>
                </table>
                <![endif]-->
            </td>
        </tr>
    </table>
</body>
</html>