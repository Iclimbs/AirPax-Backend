            line-height: 100%;
        }

        /* iOS BLUE LINKS */
        a[x-apple-data-detectors] {
            color: inherit !important;
            text-decoration: none !important;
            font-size: inherit !important;
            font-family: inherit !important;
            font-weight: inherit !important;
            line-height: inherit !important;
        }

        /* Main styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333333;
            line-height: 1.5;
            width: 100% !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        .email-wrapper {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
        }

        .email-content {
            padding: 20px;
            font-size: 16px;
            line-height: 1.5;
        }

        h2 {
            color: #2a9d8f;
            text-align: center;
            margin-top: 0;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
        }

        h3 {
            color: #2a9d8f;
            margin-top: 25px;
            margin-bottom: 10px;
            font-size: 18px;
            font-weight: bold;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin: 15px 0;
            font-size: 14px;
            table-layout: fixed;
        }

        .details-table th,
        .details-table td {
            text-align: left;
            padding: 10px;
            border-bottom: 1px solid #dddddd;
            vertical-align: top;
        }

        .details-table th {
            background-color: #f0f0f0;
            color: #333333;
            width: 30%;
            font-weight: bold;
        }

        .centered-content {
            text-align: center;
            margin: 25px 0;
        }

        .footer {
            text-align: center;
            font-size: 12px;
            color: #666666;
            padding: 20px;
            background-color: #f9f9f9;
            border-top: 1px solid #eeeeee;
        }

        .footer a {
            color: #2a9d8f;
            text-decoration: none;
        }

        .footer p {
            margin: 5px 0;
        }

        .logo-container {
            display: inline-block;
            vertical-align: middle;
        }

        .logo-img {
            height: 20px;
            width: auto;
            vertical-align: middle;
            margin-right: 5px;
            border: 0;
            outline: none;
            text-decoration: none;
            display: block;
        }

        /* Responsive styles */
        @media screen and (max-width: 600px) {
            .email-wrapper {
                width: 100% !important;
            }

            .email-content {
                padding: 15px !important;
            }

            .details-table th,
            .details-table td {
                display: block;
                width: 100% !important;
