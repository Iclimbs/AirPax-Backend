<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>IRCTC Style Ticket - Airpax</title>
    <style>
        body {
            font-family: 'Courier New', Courier, monospace;
            font-size: 13px;
            background-color: #f0f0f0;
            margin: 0;
            padding: 20px;
        }
        .ticket-container {
            max-width: 700px;
            margin: auto;
            background: #fff;
            border: 1px solid #333;
            padding: 15px;
        }
        .header {
            text-align: center;
            border-bottom: 1px solid #333;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }
        .header h1 {
            margin: 0;
            font-size: 20px;
            text-transform: uppercase;
        }
        .section-title {
            background: #eee;
            padding: 6px 10px;
            font-weight: bold;
            border: 1px solid #ccc;
            margin-top: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 5px;
        }
        td, th {
            border: 1px solid #ccc;
            padding: 6px;
            text-align: left;
        }
        .passenger-section {
            margin-top: 15px;
        }
        .footer {
            text-align: center;
            font-size: 11px;
            color: #555;
            margin-top: 30px;
            border-top: 1px dashed #aaa;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <div class="ticket-container">
        <div class="header">
            <h1>AIRPAX TRAVEL TICKET</h1>
            <p>Payment Confirmed - eTicket Generated</p>
        </div>

        <div class="section-title">Passenger Information</div>
        <table>
            <tr><th>Name</th><td><%= user.name %></td></tr>
        </table>

        <div class="section-title">Trip Details</div>
        <table>
            <tr><th>From</th><td><%= trip.from %></td></tr>
            <tr><th>To</th><td><%= trip.to %></td></tr>
            <tr><th>Journey Start Date</th><td><%= trip.journeystartdate %></td></tr>
            <tr><th>Journey End Date</th><td><%= trip.journeyenddate %></td></tr>
            <tr><th>Start Time</th><td><%= trip.starttime %></td></tr>
            <tr><th>End Time</th><td><%= trip.endtime %></td></tr>
        </table>

        <div class="section-title">Ticket Information</div>
        <table>
            <tr><th>PNR</th><td><%= payment.pnr %></td></tr>
            <tr><th>Total Fare</th><td>â‚¹<%= payment.amount %></td></tr>
        </table>

        <div class="section-title">Passenger Details</div>
        <% seat.forEach(function(seat) { %>
            <div class="passenger-section">
                <table>
                    <tr><th>First Name</th><td><%= seat.details.fname %></td></tr>
                    <tr><th>Last Name</th><td><%= seat.details.lname %></td></tr>
                    <tr><th>Age</th><td><%= seat.details.age %></td></tr>
                    <tr><th>Gender</th><td><%= seat.details.gender %></td></tr>
                    <tr><th>Email</th><td><%= seat.details.email %></td></tr>
                    <tr><th>Phone</th><td><%= seat.details.mobileno %></td></tr>
                    <tr><th>Seat No</th><td><%= seat.seatNumber %></td></tr>
                </table>
            </div>
        <% }); %>

        <div class="footer">
            RIGI TRANS TECH PVT LTD, NEW DELHI - 110047<br>
            Email: info@airpax.co | Phone: +919990301111<br>
            Visit: <a href="https://airpax.co">airpax.co</a>
        </div>
    </div>
</body>
</html>
